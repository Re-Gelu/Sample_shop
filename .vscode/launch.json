      "args": ["-A", "config", "worker", "--pool=solo", "--loglevel=info"],
      "justMyCode": true
    },
    {
      "name": "Python: CeleryBeat",
      "type": "python",
      "request": "launch",
      "module": "celery",
      "cwd": "${workspaceFolder}/backend",
      "args": ["-A", "config", "beat", "--loglevel=info"],
      "justMyCode": true
    },
    {
      "name": "Node: React",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "skipFiles": ["<node_internals>/**"],
      "command": "npm start"
